      &lt;span class=&quot;gatsby-resp-image-background-image&quot; style=&quot;padding-bottom:44.99999999999999%;position:relative;bottom:0;left:0;background-image:url(&amp;#x27;data:image/png;base64,&amp;#x27;);background-size:cover;display:block&quot;&gt;&lt;/span&gt;
